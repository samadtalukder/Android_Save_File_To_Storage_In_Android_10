<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_write_something"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write Something" />

    <Button
        android:id="@+id/btn_save_public_external_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save To Public External Storage" />

    <Button
        android:id="@+id/btn_external_storage_save_private"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save To Private External Storage" />

    <Button
        android:id="@+id/btn_external_storage_save_private_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save To Private Cached External Storage" />

    <Button
        android:id="@+id/btn_external_storage_display_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display External Storage Directory Path" />

</LinearLayout>